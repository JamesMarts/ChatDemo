<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="250dp" android:layout_height="40dp" android:text="连接用户(联通)"
        android:gravity="center"
        android:onClick="connect"
        />
    <Button
        android:layout_width="250dp" android:layout_height="40dp" android:text="连接用户(移动)"
        android:gravity="center"
        android:onClick="connectyidong"
        />

    <Button
        android:layout_width="250dp" android:layout_height="40dp" android:text="会话列表"
        android:gravity="center"
        android:onClick="list"
        />

    <Button
        android:layout_width="250dp" android:layout_height="40dp" android:text="新建会话-》移动"
        android:gravity="center"
        android:onClick="convers"
        />
    <Button
        android:layout_width="250dp" android:layout_height="40dp" android:text="新建会话-》联通"
        android:gravity="center"
        android:onClick="convers2"
        />
    <Button
        android:layout_width="250dp" android:layout_height="40dp" android:text="融云客服"
        android:gravity="center"
        android:onClick="kefu"
        />

</LinearLayout>
